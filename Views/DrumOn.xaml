<UserControl x:Class="CraigerEightOhEighter.Views.DrumOn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="45">
        <Grid MouseLeftButtonUp="DrumOnClicked">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF5BB180" Offset="0"/>
                    <GradientStop Color="#FF1168BA" Offset="1"/>
                <GradientStop Color="#FF5B94B8" Offset="0.25"/>
            </RadialGradientBrush>
            </Grid.Background>

        </Grid>
</UserControl>
